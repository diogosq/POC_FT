<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.dsqz.chatnoir.poc_ft.activity.CadastroActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Cadastro"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize20"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/relativeLayout">

        <LinearLayout
            android:id="@+id/cadastro_field_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginEnd="20.2dp"
            android:layout_marginStart="22.2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24.2dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_nome"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/editText_nome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11.8dp"
                    android:fontFamily="sans-serif"
                    android:hint="Nome"
                    android:inputType="textPersonName"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:textColor="@color/textCinza"
                    android:textSize="@dimen/textsize16"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_email"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/editText_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11.8dp"
                    android:fontFamily="sans-serif"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textColor="@color/textCinza"
                    android:textSize="@dimen/textsize16"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_senha"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/non_active_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/editText_senha"
                        android:background="@null"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="                   (mínimo de 6 dígitos)"
                        android:inputType="textPassword"
                        android:textColor="@color/textCinza"
                        android:textSize="12sp"
                        android:textStyle="italic"/>

                    <EditText
                        android:id="@+id/editText_senha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="11.8dp"
                        android:fontFamily="sans-serif"
                        android:hint="Senha"
                        android:inputType="textPassword"
                        android:maxLength="50"
                        android:textColor="@color/textCinza"
                        android:textSize="@dimen/textsize16"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_cpf"/>
                </RelativeLayout>

                <EditText
                    android:id="@+id/editText_CPF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="11.8dp"
                    android:fontFamily="sans-serif"
                    android:hint="CPF"
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColor="@color/textCinza"
                    android:textSize="@dimen/textsize16"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_telefone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/non_active_edit_text2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/editText_telefone"
                        android:background="@null"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="                                            (Ex.: 31 3333-3333)"
                        android:inputType="textPassword"
                        android:textColor="@color/textCinza"
                        android:textSize="12sp"
                        android:textStyle="italic"/>

                    <EditText
                        android:id="@+id/editText_telefone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="11.8dp"
                        android:fontFamily="sans-serif"
                        android:hint="DDD + Telefone"
                        android:inputType="number"
                        android:maxLength="30"
                        android:textColor="@color/textCinza"
                        android:textSize="@dimen/textsize16"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_celular"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/non_active_edit_text3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/editText_celular"
                        android:background="@null"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="                                            (Ex.: 31 99999-9999)"
                        android:inputType="textPassword"
                        android:textColor="@color/textCinza"
                        android:textSize="12sp"
                        android:textStyle="italic"/>

                    <EditText
                        android:id="@+id/editText_celular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="11.8dp"
                        android:fontFamily="sans-serif"
                        android:hint="DDD + Celular"
                        android:inputType="number"
                        android:maxLength="20"
                        android:textColor="@color/textCinza"
                        android:textSize="@dimen/textsize16"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon7"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_nascimento"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/non_active_edit_text4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/editText_nascimento"
                        android:background="@null"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="                                            (dd/mm/aaaa)"
                        android:inputType="textPassword"
                        android:textColor="@color/textCinza"
                        android:textSize="12sp"
                        android:textStyle="italic"/>

                    <EditText
                        android:id="@+id/editText_nascimento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="11.8dp"
                        android:fontFamily="sans-serif"
                        android:hint="Nascimento"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textColor="@color/textCinza"
                        android:textSize="@dimen/textsize16"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cadastro_icon8"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_sexo"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/non_active_edit_text6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/spinner_sexo"
                        android:background="@null"
                        android:focusable="false"
                        android:fontFamily="sans-serif-light"
                        android:hint="                                            (escolha uma opção)"
                        android:inputType="textPassword"
                        android:textColor="@color/textCinza"
                        android:textSize="12sp"
                        android:textStyle="italic"/>

                    <EditText
                        android:id="@+id/non_active_edit_text5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignStart="@+id/spinner_sexo"
                        android:background="@null"
                        android:focusable="false"
                        android:fontFamily="sans-serif"
                        android:hint="Sexo"
                        android:inputType="textPassword"
                        android:textColor="@color/textCinza"
                        android:textSize="@dimen/textsize16"/>

                    <Spinner
                        android:id="@+id/spinner_sexo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="11.8dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/textCinza"
                        android:textSize="@dimen/textsize16"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="76.7dp"
                android:layout_marginTop="22.7dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_termosUso"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12.8dp"
                    android:fontFamily="sans-serif"
                    android:text="Aceito os termos de uso"
                    android:textColor="@color/textCinza"
                    android:textSize="@dimen/textsize16"/>
            </LinearLayout>

            <Button
                android:id="@+id/button_ConfirmarCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70.8dp"
                android:layout_marginStart="70.3dp"
                android:layout_marginTop="30.9dp"
                android:background="@color/blue"
                android:fontFamily="sans-serif"
                android:maxHeight="43dp"
                android:maxWidth="218.9dp"
                android:text="Confirmar cadastro"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize13_8"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
