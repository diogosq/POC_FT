        android:src="@drawable/splash_logo_teste"/>


    <RelativeLayout
        android:layout_marginTop="203.9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/produto_descriicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="33.3dp"
            android:layout_marginEnd="152.7dp"
            android:layout_marginStart="36.3dp"
            android:fontFamily="sans-serif"
            android:text="Carga gilete mach3"
